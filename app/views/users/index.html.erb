<div class="container">
    <h1 class="text-center">All Users</h1>
    <% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4" align="center">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li>
                    <small><%= pluralize(user.articles.count, "articles") if user.articles %></small>
                </li>
                <% if logged_in? && current_user.admin? %>
                    <li>
                        <%= link_to "Delete this user", 
                                user_path(user), 
                                method: :delete, 
                                class: 'btn btn-danger btn-xs',
                                data: { confirm: "Are you sure you want to delete this user and all his articles?" } 
                        %>
                    </li>
                <% end %>
            </div>
        </div>
    </ul>
    <% end %>
    <div class="text-center">
        <%= will_paginate %>
    </div>
</div>