<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
            <% if @article.errors.any? %>
                <%= render 'shared/errors', target: @article %>
            <% end %>
            <%= render 'form', article: @article, form_name: 'Edit article' %>
            <%= link_to '[Cancel request and return to articles listing]', articles_path, class: 'text-center' %>
        </div>
    </div>
</div>