<div class="container">
    <div class="row">
        <h1 class="text-center">Log in</h1>
        <div class="col-md-4 col-md-offset-4">
            <%= form_for :session, class: 'form-horizontal', url: login_path do |f|%>
                <div class="form-group">
                    <%= f.label :username %>
                    <%= f.text_field :username, placeholder: 'Your username goes here', class:'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, placeholder: 'Your password goes here', class:'form-control' %>
                </div>
                <div class="text-center">
                    <%= f.submit 'Log In', class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>