<h1 class="text-center">New Category</h1>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <% if @category.errors.any? %>
                <%= render 'shared/errors', target: @category %>
        <% end %>
        <%= form_for @category, class: 'form-horizontal' do |f| %>
            <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, placeholder: 'Category', class: 'form-control' %>
            </div>
            <div class="form-group text-center">
                <%= f.submit 'Create new article', class: 'btn btn-large btn-primary' %>
            </div>
        <% end %>
    </div>
</div>